local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Hide Or Die",
   Icon = 0, 
   LoadingTitle = "Hide Or Die",
   LoadingSubtitle = "by B1RD,",
   Theme = "Default", 

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false, 

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, 
      FileName = "Big Hub"
   },

   Discord = {
      Enabled = false, 
      Invite = "noinvitelink", 
      RememberJoins = true 
   },

   KeySystem = false, 
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided", 
      FileName = "Key", 
      SaveKey = true, 
      GrabKeyFromSite = false, 
      Key = {"Hello"} 
   }
})

local ESPTab = Window:CreateTab("PVP", nil)
local ESPSection = ESPTab:CreateSection("ESP")

local ESPEnabled = false
local Toggle = ESPTab:CreateToggle({
   Name = "Hider ESP",
   CurrentValue = false,
   Flag = "ESP_Toggle",
   Callback = function(Value)
       ESPEnabled = Value
   end,
})

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer

local function GetValidRootPart(Character)
   if Character then
       for _, Part in pairs(Character:GetChildren()) do
           if Part:IsA("BasePart") and Part.Size.Magnitude < 10 then 
               return Part
           end
       end
   end
   return nil
end

local function CreateESP(Player)
   if Player.Team and Player.Team.Name ~= "Hider" then return end 
   
   local Box = Drawing.new("Square")
   Box.Thickness = 2
   Box.Color = Color3.new(1, 0, 0)
   Box.Filled = false
   Box.Visible = false
   
   RunService.RenderStepped:Connect(function()
       if not Player.Team or Player.Team.Name == "Seeker" then
           Box.Visible = false
           Box:Remove()
           return
       end
       if not Player.Team or Player.Team.Name == "Seeker" then
           Box.Visible = false
           return
       end
       if ESPEnabled and Player and Player.Character and Player ~= LocalPlayer then
           local RootPart = GetValidRootPart(Player.Character)
           if RootPart then
               local Vector, OnScreen = Camera:WorldToViewportPoint(RootPart.Position)
               if OnScreen then
                   local Size = Vector3.new(2, 3, 0) * (1 / (RootPart.Position - Camera.CFrame.Position).Magnitude * 100)
                   Box.Size = Vector2.new(Size.X * 30, Size.Y * 30) 
                   Box.Position = Vector2.new(Vector.X - Box.Size.X / 2, Vector.Y - Box.Size.Y / 2)
                   Box.Visible = true
               else
                   Box.Visible = false
               end
           else
               Box.Visible = false
           end
       else
           Box.Visible = false
       end
   end)
end

for _, Player in pairs(Players:GetPlayers()) do
   if Player ~= LocalPlayer then
       CreateESP(Player)
   end
end

Players.PlayerAdded:Connect(function(Player)
   if Player.Team and Player.Team.Name == "Hider" then
       CreateESP(Player)
   end
end)
