local ESPEnabled = false
local Boxes = {} -- Store created ESP boxes

local Toggle = ESPTab:CreateToggle({
   Name = "Hider ESP",
   CurrentValue = false,
   Flag = "ESP_Toggle",
   Callback = function(Value)
       ESPEnabled = Value

       if not ESPEnabled then
           -- Hide and remove all ESP boxes
           for _, Box in pairs(Boxes) do
               Box.Visible = false
               Box:Remove()
           end
           Boxes = {} -- Clear stored ESP objects
           return
       end

       local Players = game:GetService("Players")
       local RunService = game:GetService("RunService")
       local Camera = workspace.CurrentCamera
       local LocalPlayer = Players.LocalPlayer

       local function GetValidRootPart(Character)
           if Character then
               for _, Part in pairs(Character:GetChildren()) do
                   if Part:IsA("BasePart") and Part.Size.Magnitude < 10 then -- Ignore oversized parts
                       return Part
                   end
               end
           end
           return nil
       end

       local function CreateESP(Player)
           if not Player.Team or Player.Team.Name ~= "Hider" then return end -- Only highlight Hiders
           
           local Box = Drawing.new("Square")
           Box.Thickness = 2
           Box.Color = Color3.new(1, 0, 0)
           Box.Filled = false
           Box.Visible = false
           Boxes[Player] = Box -- Store ESP box
           
           local function Update()
               if ESPEnabled and Player and Player.Character and Player ~= LocalPlayer then
                   local RootPart = GetValidRootPart(Player.Character)
                   if RootPart then
                       local Vector, OnScreen = Camera:WorldToViewportPoint(RootPart.Position)
                       if OnScreen then
                           local Size = Vector3.new(2, 3, 0) * (1 / (RootPart.Position - Camera.CFrame.Position).Magnitude * 100)
                           Box.Size = Vector2.new(Size.X * 50, Size.Y * 50) -- Reduced size multiplier
                           Box.Position = Vector2.new(Vector.X - Box.Size.X / 2, Vector.Y - Box.Size.Y / 2)
                           Box.Visible = true
                       else
                           Box.Visible = false
                       end
                   else
                       Box.Visible = false
                   end
               else
                   Box.Visible = false
               end
           end
           
           RunService.RenderStepped:Connect(Update)
       end

       for _, Player in pairs(Players:GetPlayers()) do
           if Player ~= LocalPlayer then
               CreateESP(Player)
           end
       end

       Players.PlayerAdded:Connect(function(Player)
           if Player.Team and Player.Team.Name == "Hider" then
               CreateESP(Player)
           end
       end)
   end,
})

